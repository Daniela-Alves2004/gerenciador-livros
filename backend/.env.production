PORT=3001
NODE_ENV=production
SQLITE_DB_PATH=./db/database.sqlite
JWT_SECRET=implementacao_segura_em_producao_2025
JWT_EXPIRATION=7d
FRONTEND_URL=http://localhost:3000
LOG_LEVEL=info

# Configurações de Pool de Conexões - Produção
DB_POOL_MAX=10
DB_POOL_MIN=2
DB_POOL_ACQUIRE=60000
DB_POOL_IDLE=30000
DB_POOL_EVICT=5000

# Configurações de Retry - Produção
DB_RETRY_MAX=5
DB_RETRY_TIMEOUT=10000

# Configurações SQLite - Timeouts - Produção
DB_TIMEOUT=30000
DB_BUSY_TIMEOUT=60000

# Configurações SQLite - Pragmas Otimizados para Produção
DB_JOURNAL_MODE=WAL
DB_SYNCHRONOUS=NORMAL
DB_CACHE_SIZE=-128000
DB_TEMP_STORE=MEMORY
DB_FOREIGN_KEYS=true
DB_WAL_AUTOCHECKPOINT=2000

# Configurações de Cache
CACHE_TTL=300
ENABLE_REDIS=false
REDIS_URL=redis://localhost:6379
